<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:actionBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">
    <!--这个是隐藏的布局，然后通过动态的设置高度达到效果-->
    <LinearLayout
        style="@style/StatusBarStyle"
        android:background="@color/green" />

    <com.wlcxbj.bike.view.ActionBarView
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/green"
        actionBar:centerText="@string/result_title"
        actionBar:rightEnable="true"
        actionBar:rightText="@string/broken" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_60"
        android:paddingTop="@dimen/dp_60">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/complete" />

        <TextView
            android:id="@+id/tv_payResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_19"
            android:text="@string/payed_result"
            android:textColor="@color/text_gray2" />
    </LinearLayout>

    <include layout="@layout/layout_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_99"
            android:textColor="@color/text_gray2"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_rideTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="28分钟"
            android:textColor="@color/user_text"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <include layout="@layout/layout_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_118"
            android:textColor="@color/text_gray2"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_rideDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2千米"
            android:textColor="@color/user_text"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <include layout="@layout/layout_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_120"
            android:textColor="@color/text_gray2"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_rideCalory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1000卡路里"
            android:textColor="@color/user_text"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <include layout="@layout/layout_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_title"
            android:textColor="@color/text_gray2"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_walletBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="8.00元"
            android:textColor="@color/user_text"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <include layout="@layout/layout_divider" />


</LinearLayout>