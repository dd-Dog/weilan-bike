<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/WHITE"
             android:clickable="true">

    <LinearLayout
        android:id="@+id/ll_inorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_endpoint"
            android:drawableLeft="@drawable/appointmentlocation"
            android:drawablePadding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tip_108"
            android:textColor="@color/text_gray2"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/tip_109"
            android:textColor="@color/green"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_110"
                    android:textColor="@color/user_text"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_ordered_bikenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    android:textColor="@color/user_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_111"
                    android:textColor="@color/user_text"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_remain_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:00"
                    android:textColor="@color/user_text"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/btn_cancelOrder"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="@dimen/margin_left_right"
            android:layout_marginLeft="@dimen/walletbg_margin"
            android:layout_marginRight="@dimen/walletbg_margin"
            android:background="@drawable/recharge_button_bg_green"
            android:text="@string/tip_112"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/charge_button_text_size"/>
    </LinearLayout>
</FrameLayout>