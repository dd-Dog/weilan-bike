<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:padding="15dp"
            android:id="@+id/user_wallet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/userwallet"
                tools:ignore="ContentDescription"/>

            <TextView
                style="@style/UserTextViewStyle"
                android:text="@string/wallet_title"/>
        </LinearLayout>
        <View
            android:background="#eeeeee"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:padding="15dp"
            android:id="@+id/user_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/userdiscount"
                tools:ignore="ContentDescription"/>

            <TextView
                style="@style/UserTextViewStyle"
                android:text="@string/discount_title"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:padding="15dp"
            android:id="@+id/user_track"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/usertrip"
                tools:ignore="ContentDescription"/>

            <TextView
                style="@style/UserTextViewStyle"
                android:text="@string/routes_title"/>
        </LinearLayout>
        <View
            android:background="#eeeeee"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:padding="15dp"
            android:id="@+id/user_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/usernews"
                tools:ignore="ContentDescription"/>

            <TextView
                style="@style/UserTextViewStyle"
                android:text="@string/mymsg_title"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:padding="15dp"
            android:id="@+id/user_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_invite_friends"
                tools:ignore="ContentDescription"/>

            <TextView
                style="@style/UserTextViewStyle"
                android:text="@string/invite_title"/>
        </LinearLayout>
        <View
            android:background="#eeeeee"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:padding="15dp"
            android:id="@+id/user_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_guide"
                tools:ignore="ContentDescription"/>

            <TextView
                style="@style/UserTextViewStyle"
                android:text="@string/guide_title"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:padding="15dp"
            android:id="@+id/about_us"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/userabout_us"
                tools:ignore="ContentDescription"/>

            <TextView
                style="@style/UserTextViewStyle"
                android:text="@string/aboutus_title"/>
        </LinearLayout>
        <View
            android:background="#eeeeee"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:padding="15dp"
            android:id="@+id/user_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_set_up"
                tools:ignore="ContentDescription"/>

            <TextView
                style="@style/UserTextViewStyle"
                android:text="@string/settings_title"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/ll_creditPoints"
            android:layout_width="128dp"
            android:layout_height="34dp"
            android:background="@drawable/tv_reound_rec_bg_green"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/score"
                android:textColor="@color/WHITE"/>

            <TextView
                android:id="@+id/points_number"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="100"
                android:textColor="@color/WHITE"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/fill_5"
                tools:ignore="ContentDescription"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>