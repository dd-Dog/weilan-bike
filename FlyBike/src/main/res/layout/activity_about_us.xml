<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:actionBar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--这个是隐藏的布局，然后通过动态的设置高度达到效果-->
        <include layout="@layout/layout_status_bar"/>

        <com.wlcxbj.bike.view.ActionBarView
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            actionBar:actionBar_background="@color/green"
            actionBar:centerText="@string/aboutus_title"
            actionBar:rightEnable="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boot_icon"
                tools:ignore="ContentDescription"/>

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/text_gray2"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="V1.0"
                android:textColor="@color/text_gray2"
                android:textSize="14sp"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="44dp"/>
        <include layout="@layout/layout_divider"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="44dp">

            <TextView
                android:gravity="left|center_vertical"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/user_textsize"
                android:text="@string/our_wechat"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="right|center_vertical"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/user_textsize"
                android:text="微蓝单车"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <include layout="@layout/layout_divider"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="44dp">

            <TextView
                android:gravity="left|center_vertical"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/user_textsize"
                android:text="@string/phone_num"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="right|center_vertical"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/user_textsize"
                android:text="010-60608906"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <include layout="@layout/layout_divider"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="44dp">

            <TextView
                android:gravity="left|center_vertical"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/user_textsize"
                android:text="@string/our_email"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="right|center_vertical"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/user_textsize"
                android:text="support@wlcxbj.com"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <include layout="@layout/layout_divider"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="44dp">

            <TextView
                android:gravity="left|center_vertical"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/user_textsize"
                android:text="@string/out_web"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="right|center_vertical"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/user_textsize"
                android:text="http://www.wlcxbj.com"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <include layout="@layout/layout_divider"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <TextView
            android:text="@string/company"
            android:id="@+id/company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="34dp"
            android:gravity="center"
            android:textColor="@color/user_text"
            android:textSize="13sp"/>
    </LinearLayout>
</ScrollView>