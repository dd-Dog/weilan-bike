<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:actionBar="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--这个是隐藏的布局，然后通过动态的设置状态栏高度达到效果-->
    <include layout="@layout/layout_status_bar" />

    <com.wlcxbj.bike.view.ActionBarView
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        actionBar:actionBar_background="@color/green"
        actionBar:centerText="@string/tip_36"
        actionBar:rightEnable="false"
        />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/mobile_phone_ic"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="left"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:text="null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:gravity="left"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@mipmap/dot"
            android:text="@string/tip_37"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <TextView
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:gravity="left"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@mipmap/dot"
            android:text="@string/tip_38"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <TextView
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:gravity="left"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@mipmap/dot"
            android:text="@string/tip_39"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:textSize="20sp"
        android:textColor="@color/WHITE"
        android:background="@drawable/wallet_selector"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        android:text="@string/tip_40"
        android:id="@+id/btn_changePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>