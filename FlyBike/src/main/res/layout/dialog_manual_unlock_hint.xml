<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#000"
        android:text="@string/manual_unlock"
        />

    <TextView
        android:id="@+id/tv_unlockPsd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#000"
        android:text="@string/unlock_psd"
        />

    <TextView
        android:id="@+id/tv_orderActiveHint"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#000"
        android:text="@string/order_hint"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d7d4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_cancel_order"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/cancel_order"
            android:background="@drawable/selector_left_button"
            android:textColor="@color/red"
            android:textSize="20sp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d3d7d4"
            />
        <Button
            android:id="@+id/btn_continueUse"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/continue_use"
            android:background="@drawable/selector_right_button"
            android:textColor="@color/green"
            android:textSize="20sp"
            />

    </LinearLayout>
</LinearLayout>