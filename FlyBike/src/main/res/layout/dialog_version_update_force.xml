<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog">

    <LinearLayout
        android:id="@+id/ll_animContainer"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="204dp"
        android:background="@drawable/shape_dialog"
        >

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_gray2"
        android:text="发现新版本"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginRight="@dimen/dp_29"
        android:lineSpacingExtra="2dp"
        />

    <TextView
        android:id="@+id/tv_updateInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/user_text"
        android:text="您安装的微蓝单车1.0版本已经更新请下载最新版本"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:lineSpacingExtra="2dp"
        />

      <TextView
          android:id="@+id/tv_downloadNow"
          android:layout_width="match_parent"
          android:layout_height="44dp"
          android:text="立即下载"
          android:textSize="17sp"
          android:textColor="@color/WHITE"
          android:background="@drawable/recharge_button_bg_green"
          android:gravity="center"
          android:layout_margin="20dp"
          />


</LinearLayout>